    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/asteroids_txt_speed"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/asteroids_IMG_h0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/heart" />

        <View
            android:layout_width="10dp"
            android:layout_height="30dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/asteroids_IMG_h1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/heart" />

        <View
            android:layout_width="10dp"
            android:layout_height="30dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/asteroids_IMG_h2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/heart" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/asteroids_BTN_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:icon="@drawable/ic_baseline_keyboard_arrow_left_24" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/asteroids_BTN_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:icon="@drawable/ic_baseline_keyboard_arrow_right_24" />

</RelativeLayout>